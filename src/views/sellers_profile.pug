            a.button.button-primary(href="#") Contact Me <i class="fa fa-chat"></i>

block contentArea
  .row
    .twelve.columns.flex.column-direction
      - data = 1
      - types = ['', 'sports', 'people', 'abstract', 'food', 'nature', 'transport', 'animals', 'business', 'cats', 'nightlife']
      while data <= 10
        - url = "http://lorempixel.com/200/200/" + types[data]
        .row.sellers-profile-product-container.florescent-shadow
          .four.columns
            a(href="#", style="min-height: 200px")
              .sellers-profile-product-image.u-full-width(style=`background-image: url(${url});`)
          .eight.columns
            .row.flex.v-center.j-content-start
               .twelve.columns
                 a.sellers-profile-product-link(href="#")
                   h6.sellers-profile-product-description This is the description of the product This is the description of the product This is the description of the product This is the description of the product This is the description of the product This is the description of the product This is the description of the product This is the description of the product This is the description of the product This is the description of the product
            .row.flex.j-content-start
              .eight.columns
                span.sellers-profile-product-stars
                  i.fa.fa-star
                  i.fa.fa-star
                  i.fa.fa-star
                  i.fa.fa-star
                  i.fa.fa-star
              .four.columns
                .price-row
                  .mobile-pull-right
                    p.price &#8358; 1000

        - data++
      hr
      button.button.twelve.columns Load More
